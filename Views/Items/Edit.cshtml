@model WebApplication1.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit an Item</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" >
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" >
    </div>
    <div class="form-group">
        <label for="SerialNumber">Serial Number</label>
        <input type="text" class="form-control" asp-for="SerialNumber" >
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>